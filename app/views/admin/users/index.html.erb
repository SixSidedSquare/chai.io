<table class="table table-condensed">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <td><%= link_to 'Edit', '#' %></td>

        <% if u.locked%>
          <td><%= link_to 'Unlock', admin_user_unlock_path(u), :method => :put %></td>
        <% else %>
          <td><%= link_to 'Lock', admin_user_lock_path(u), :method => :put %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>