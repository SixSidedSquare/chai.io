<div class="page-header">
	<h1>Your Projects</h1>
</div>

<div class="">
	<div id="accordion2" class="accordion"> </div>
	<table class="table table-striped">
		
		<thead>
			<tr>
				<th></th>
				<th>Name</th>
				<th>Description</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		
		<tbody>
			<% @projects.each do |p|%>
				<tr>
					<td width="20"> 
						<div class="accordion-group"> 
							<div class="accordion-heading"> 
								<a href="#collapse_<%=p.id%>" data-parent="#accordion2" data-toggle="collapse" class="accordion-toggle"><i id="toggle" class="icon-plus"></i></a> 
							</div> 
						</div>
					</td>

					<td>
						<%= p.name %>
					</td>
					<td><%= p.description %></td>

					<td>
						<%= link_to 'Edit', edit_project_path(p) if p.id? %>
					</td>
					<td>
						<%= link_to 'Delete', project_path(p), :method => :delete, :confirm => "Are you sure?" if p.id? %>
					</td>
				
				</tr>
				<tr> 
					<td class="more"></td> 
					<td colspan="5" class="more"> <div class="accordion-body collapse" id="collapse_<%=p.id%>" style="height: 0px;"> 
						<div class="accordion-inner"> 
							
							<table class="table table-striped table-hover">

								<thead>
									<tr>
										<th>Title</th>
										<th>Type</th>
										<th>Datasource</th>
										<th></th>
										<th></th>
										<th></th>
									</tr>
								</thead>
								
								<tbody>
									<% p.reports.each do |r|%>
										<tr>
											<td>
												<%= link_to r.title, report_path(r) %>
											</td>
											<td><%=r.report_type%></td>
											<td><%=r.datasource.name%></td>
											<td>
												<%= link_to 'Edit', edit_report_path(r) %>
											</td>
											<td>
												<%= link_to 'Delete', report_path(r), :method => :delete, :confirm => "Are you sure?" %>
											</td>
										</tr>
									<% end %>
								</tbody>
								
							</table>
						</div> 
					</td> 
				</tr>

			<% end %>
		</tbody>
	</table>
</div>
