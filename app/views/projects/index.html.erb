<div class="page-header">
	<h1>Your Projects</h1>
</div>

<div id="dv_project_list">
	<div id="dv_table">
		<table class="table table-striped table-hover">

			<thead>
				<tr>
					<th>Name</th>
					<th>Description</th>
					<th></th>
				</tr>
			</thead>

			<tbody>

				<% @projects.each do |p| %>
					<tr>
						<td>
							<a href="<%=project_path(p)%>"><%=p.name%></a>
						</td>
						<td><%=p.description%></td>
						<td></td>
					</tr>
				<% end %>
			</tbody>

		</table>
	</div>
</div>
