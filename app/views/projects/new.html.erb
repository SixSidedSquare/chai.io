<div class="page-header">
	<h1><%=@project.new_record? ? 'New' : 'Edit'%> Project <small><%=@project.new_record? ? 'Create a new Project' : ''%></small></h1>
</div>


<div class="">
	
	<%= form_for @project, :html => {:class => "form", :method => @project.new_record? ? "post" : "put"} do |f| %>

	  <% @project.errors.full_messages.each do |msg| %>
		<div class="alert alert-error"><%= msg %></div>
	  <% end %>
	
	  <label class="control-label">Name</label>
	  <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name'%>

	  <label class="control-label">Description</label>
	  <%= f.text_area :description, :size => '100x2', :class => 'form-control', :placeholder => 'Description'%>
	
	  <div class="form-actions">
			<button class="btn btn-primary" name="commit" id="commit" type="submit">Save</button>
	  </div>
	
	<% end %>
</div>